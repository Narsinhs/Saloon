@model IEnumerable<Saloon.Models.Appointment_Master>

@{
    ViewBag.Title = "Appointment";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div>
    <form action="~/User/AddAppointment" method="get" style="position:relative; left:20px">
        <button type="submit">Add Appointment</button>
    </form>
</div>
<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.E_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bill)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.E_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bill)
        </td>
        <td>
            @Html.ActionLink("Add Package", "AppointmentPackages", new { a = item.Ap_ID }) |
            @Html.ActionLink("Add Product", "AppointmentProduct", new { a = item.Ap_ID }) |
            @Html.ActionLink("Add Facility", "AppointmentFacility", new { a = item.Ap_ID })|
            @Html.ActionLink("Delete", "DeleteAppointment", new { a = item.Ap_ID })
        </td>
    </tr>
}

</table>
