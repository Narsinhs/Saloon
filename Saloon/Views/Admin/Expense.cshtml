@model IEnumerable<Saloon.Models.Expense>

@{
    ViewBag.Title = "Expense";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Expense</h2>

<p>
    @Html.ActionLink("Add Expense", "AddExpense")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.E_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EC_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Add_By)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.E_ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EC_ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Add_By)
        </td>
        <td>
            @Html.ActionLink("Update", "UpdateExpense", new {  a=item.E_ID }) |
            @Html.ActionLink("Delete", "DeleteExpense", new {  a=item.E_ID })
        </td>
    </tr>
}

</table>
