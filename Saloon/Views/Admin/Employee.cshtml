@model IEnumerable<Saloon.Models.Employee>

@{
    ViewBag.Title = "Employee";
    if (Session["Admin"] == null)
    {
        Response.Redirect("~/Admin/Index");
    }
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div>
    <form action="~/Admin/AddEmployee" method="get" style="position:relative; left:20px">
        <button type="submit">Add Employee</button>
    </form>
</div>
<form action="~/Admin/SearchDetailsEmployee" method="get" style="position:relative; left:20px">
    <br />
    <input type="text" name="name" /><input type="submit" value="Search" name="Search" />
    <br />
    <p>
        <input type="radio" value="did" name="did" />Search by Designation &nbsp;&nbsp;&nbsp;
        <input type="radio" value="depid" name="depid" />Search by Department</>
        &nbsp;&nbsp;&nbsp;
        <input type="radio" value="ename" name="ename" />Search by Name</>
    </p>

    <br />
</form>
<table class="table">
    <tr>
       
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contact)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NIC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.D_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dep_Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contact)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NIC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.D_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dep_Name)
        </td>
        <td>
            @Html.ActionLink("Update", "UpdateEmployee", new { a = item.E_ID }) |
            @Html.ActionLink("Delete", "DeleteEmployee", new { a = item.E_ID })
        </td>
    </tr>
}

</table>
