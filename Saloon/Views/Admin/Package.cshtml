@model IEnumerable<Saloon.Models.Package>

@{
    ViewBag.Title = "Package";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Package</h2>

<p>
    @Html.ActionLink("Add New Package", "AddPackage")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.P_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.P_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.P_ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.P_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Edit", "UpdatePackage", new {  a=item.P_ID }) |
            @Html.ActionLink("Delete", "DeletePackage", new {  a=item.P_ID })
        </td>
    </tr>
}

</table>
