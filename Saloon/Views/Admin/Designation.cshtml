@model IEnumerable<Saloon.Models.Designation>

@{
    ViewBag.Title = "Designation";
    if (Session["Admin"] == null)
    {
        Response.Redirect("~/Admin/Index");
    }
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div>
    <form action="~/Admin/AddDesignation" method="get" style="position:relative; left:20px">
        <button type="submit">Add Designation</button>
    </form>
</div>
<br />
<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.D_Name)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        
        <td>
            @Html.DisplayFor(modelItem => item.D_Name)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "UpdateDesignation", new {  a=item.D_ID }) |
           
            @Html.ActionLink("Delete", "DeleteDesignation", new {  a=item.D_ID })
        </td>
    </tr>
}

</table>
