@model IEnumerable<Saloon.Models.Appointment_Master>
@{
    ViewBag.Title = "Getallappointment";
    if (Session["Admin"] == null)
    {
        Response.Redirect("~/Admin/Index");
    }
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<form action="~/Admin/SearchAppointment" method="get" style="position:relative; left:20px">
    <br />
    <input type="text" name="name" /><input type="submit" value="Search" name="Search" />
    <br />
    <p>
        <input type="radio" value="Uname" name="Uname" />Search by Username &nbsp;&nbsp;&nbsp;
        <input type="radio" value="Empname" name="Empname" />Search by Employee name</>
    </p>

    <br />
</form>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.U_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.E_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bill)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.U_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.E_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bill)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Change Status", "AppStatus", new { a=item.Ap_ID }) |
            @Html.ActionLink("Facilities Details", "DetailsFacilities", new { a = item.Ap_ID }) |
            @Html.ActionLink("Packages Details", "DetailsPackages", new { a = item.Ap_ID }) |
            @Html.ActionLink("Products Details", "DetailsProducts", new { a = item.Ap_ID }) 
        </td>
    </tr>
}

</table>
